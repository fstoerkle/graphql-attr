{
  "name": "graphql-attr",
  "version": "0.0.4",
  "description": "Get attributes of GraphQL queries",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier src/**/*.js test/**/*.js --ignore-path ./.prettierignore --write && git add . && git status",
    "test": "ava test/**/*Spec.js",
    "coverage": "nyc npm test"
  },
  "keywords": [
    "graphql",
    "query",
    "util"
  ],
  "files": [
    "src"
  ],
  "author": "Florian St√∂rkle <florian@stoerkle.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/fstoerkle/graphql-attr.git"
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "1.4.1",
    "nyc": "14.1.1",
    "pre-commit": "1.2.2",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "graphql": "14.4.0",
    "graphql-tag": "2.10.1"
  },
  "ava": {
    "verbose": true
  },
  "nyc": {
    "cache": true,
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "build/coverage"
  },
  "pre-commit": [
    "prettier"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
